{
  "servers": {
    "serena": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "exec", "-i",
        "serena",
        "serena-mcp-server",
        "--context", "ide-assistant",
        "--transport", "stdio",
        "--project",
        "/workspaces/projects/side-project/${workspaceFolderBasename}" // ← 完全用 VS Code 變數
      ],
      "cwd": "${workspaceFolder}"
    }
  }
}
